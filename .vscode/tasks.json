{
  // https://qiita.com/yoyomion/items/ed60a89009616f2efd55
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++: g++ build active file",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "/usr/bin/g++",
      "args": [
        "-g",
        "-O0",
        "-std=c++17",
        "${file}"
      ],
      "problemMatcher": [
        "$gcc"
      ]
    },
  ],
  "version": "2.0.0"
}